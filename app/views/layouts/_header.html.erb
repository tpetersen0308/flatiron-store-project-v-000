<% if logged_in? %>
  <h3><%= link_to "Hello, #{current_user.slug}!", cart_path(current_user.current_cart) %></h3>
<% end %>
<nav class="">
    <ul>
        <li> <%= link_to "Store Home", store_path %> </li>
        <% if logged_in? %>
          <% if !!@cart %>
            <li> <%= link_to "Cart", cart_path(current_user.current_cart) %></li>
          <% end %>
          <li> <%= link_to "Log Out", destroy_user_session_path, method: 'delete' %></li>
        <% else %>
          <li> <%= link_to "Log In", new_user_session_path %></li>
        <% end %>

    </ul>
</nav>